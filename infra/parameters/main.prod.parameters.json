{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentParameters.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "environment": {
      "value": "prod"
    },
    "applicationName": {
      "value": "todolist"
    },
    "location": {
      "value": "East US 2"
    },
    "postgresAdminLogin": {
      "value": "todolistadmin"
    },
    "logRetentionInDays": {
      "value": 90
    },
    "databaseSkuName": {
      "value": "Standard_D4s_v3"
    },
    "databaseStorageSizeGB": {
      "value": 128
    },
    "enableDatabaseHA": {
      "value": true
    },
    "enableZoneRedundancy": {
      "value": true
    },
    "minReplicas": {
      "value": 2
    },
    "maxReplicas": {
      "value": 10
    }
  }
}
