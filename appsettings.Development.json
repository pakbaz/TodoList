{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=todolistdb;Username=admin;Password=password;Include Error Detail=true",
    "SqliteConnection": "Data Source=todolist.db"
  },
  "Database": {
    "Provider": "PostgreSQL",
    "SeedData": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information",
      "TodoList": "Debug"
    },
    "Console": {
      "IncludeScopes": true,
      "TimestampFormat": "yyyy-MM-dd HH:mm:ss "
    }
  },
  "AllowedHosts": "*",
  "DetailedErrors": true,
  "HealthChecks": {
    "UI": {
      "HealthCheckUri": "/health"
    }
  }
}
